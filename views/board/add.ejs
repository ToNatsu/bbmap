<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Barrier-free Map</title>
    <link rel="stylesheet" href="/stylesheet/users.css" />
  </head>
  <body class="container">
    <header>
      <div class="header-char">
        <a href="/">Barrier-free Map</a>
      </div>
      <div class="header-link">
        <ul>
          <li>
            <a href="/map">マップ</a>
          </li>
          <li>
            <a href="/howto">使い方</a>
          </li>
          <li>
            <a href="/board">追加依頼</a>
          </li>
        </ul>
      </div>
    </header>
    <div role="main" class="main">
      <% for(var i in content) { %>
        <table class="table">
        <tr>
          <% var obj = content[i]; %>
          <th class="name">◆<%= obj.name %></th>
          <td class="type">種類：<%= obj.type %></td>
          <td class="lonlat"><%= obj.lonlat %></td>
          <td class="url">URL：<%= obj.url %></td>
        </tr>
        </table>
      <% } %>
  </div>

    <footer>
      <div class="footer-char">
        Barrier-free Map
      </div>
      <div class="footer-link">
        <a class="link" href="/howto">使い方</a>
      </div>
      </footer>
  </body>
</html>